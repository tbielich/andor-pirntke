{% set title = folder.name %}
{% extends "base.njk" %}
{# cloudinary media folders #}
{% block cloudinary %}
<section>

  {% if media == "Fahrzeuge" %}
    {% for folder in cloudinary.folders %}
    <a class="card" href="/{{ folder.path }}" title="{{ folder.name }}">
      {% for image in folder.images | limit(1) %}
      {% thumb image.secure_url, folder.name %}
      {% endfor %}
      <span class="title">{{ folder.name }}</span>
    </a>
    {% endfor %}
  {% endif %}

  {% if media == "Fahrzeugteile" %}
    {% for folder in cloudinaryParts.folders %}
    <a class="card" href="/{{ folder.path }}" title="{{ folder.name }}">
      {% for image in folder.images | limit(1) %}
      {% thumb image.secure_url, folder.name %}
      {% endfor %}
      <span class="title">{{ folder.name }}</span>
    </a>
    {% endfor %}
  {% endif %}

</section>
{% endblock %}
{% block footer %}{% endblock %}
{% block scripts %}{% endblock %}
